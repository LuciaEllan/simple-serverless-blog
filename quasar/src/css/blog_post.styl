.blog_post_title
  font-size 36px
  letter-spacing -0.02em
  line-height 1.2

.blog_post_date
  font-size 12px
  color #777

.blog_post_tags, .blog_post_actions
  font-size 16px
  color #777

.blog_post_body
  font-size 16px
  line-height 1.6
  letter-spacing -0.02em
  >>> h1, >>> h2, >>> h3, >>> h4, >>> h5, >>> h6
    line-height 1.1
    letter-spacing -0.05em
    margin 1em 0 0.4em 0
    padding 0.1em 0
    border-bottom solid #999999 1px
    &:nth-child(1)
      margin 0 0 0.4em 0
  >>> h1
    font-size 36px
    font-weight 400
  >>> h2
    font-size 32px
    font-weight 400
  >>> h3
    font-size 28px
    font-weight 450
  >>> h4
    font-size 24px
    font-weight 450
  >>> h5
    font-size 20px
    font-weight 500
  >>> h6
    font-size 18px
    font-weight 500
  >>> img
    max-width 100%
  >>> code
    padding-left 5px
    padding-right 5px
    background-color #ddd
  >>> pre
    padding 10px
    margin-top 0
    margin-bottom 0.5em
    line-height 1.3
    background-color #eee
  >>> pre code
    background-color transparent
    padding-left 0
    padding-right 0
  >>> ol, >>> ul
    margin-bottom 0.5em
  >>> hr
    margin 0.3em 0
    border-top none
    border-bottom solid #999999 1px
  >>> p
    margin-bottom 0.7em
